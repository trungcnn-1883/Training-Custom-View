<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".MainActivity">

    <gooner.demo.customview.MyCustomView
            android:layout_marginTop="@dimen/margin_normal"
            app:job="Android"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_xlarge"/>

    <gooner.demo.customview.MyCustomView
            app:job="Java"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_xlarge"/>

    <gooner.demo.customview.MyCustomView
            app:job="PHP"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_xlarge"/>

    <gooner.demo.customview.CustomShape
            android:layout_marginTop="@dimen/margin_large"
            app:custom_color="orange"
            app:custom_shape="Square"
            android:layout_width="wrap_content"
            android:layout_height="301dp"/>

    <gooner.demo.customview.CustomShape
            app:custom_color="green"
            app:custom_shape="Rectangle"
            android:layout_width="wrap_content"
            android:layout_height="136dp"/>

    <gooner.demo.customview.CustomShape
            app:custom_color="red"
            app:custom_shape="Rectangle"
            android:layout_width="wrap_content"
            android:layout_height="97dp"/>

    <gooner.demo.customview.CustomShape
            app:custom_color="green"
            app:custom_shape="Circle"
            android:layout_width="wrap_content"
            android:layout_height="170dp"/>


</LinearLayout>